@page "/dashboard"
@attribute [Authorize(Roles = "administrador,tecnico")]
@inject ApiService ApiService

<PageTitle>Dashboard - SIREFI</PageTitle>

<h1 class="mb-4">Dashboard General</h1>

@if (stats != null)
{
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h2>@stats.Total</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Recibidos</h5>
                    <h2>@stats.Recibidos</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">En Proceso</h5>
                    <h2>@stats.EnProceso</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Solucionados</h5>
                    <h2>@stats.Solucionados</h2>
                </div>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5>Reportes Recientes</h5>
    </div>
    <div class="card-body">
        @if (loading)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (reportes.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Folio</th>
                            <th>Título</th>
                            <th>Categoría</th>
                            <th>Estado</th>
                            <th>Prioridad</th>
                            <th>Fecha</th>
                            <th>Reportante</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reporte in reportes)
                        {
                            <tr>
                                <td><strong>@reporte.Folio</strong></td>
                                <td>@reporte.Titulo</td>
                                <td>@reporte.Categoria</td>
                                <td>
                                    <span class="badge" style="background-color: @reporte.EstadoColor">
                                        @reporte.Estado
                                    </span>
                                </td>
                                <td>
                                    <span class="badge" style="background-color: @reporte.PrioridadColor">
                                        @reporte.Prioridad
                                    </span>
                                </td>
                                <td>@reporte.FechaReporte.ToString("dd/MM/yyyy")</td>
                                <td>@reporte.ReportanteNombre</td>
                                <td>
                                    <a href="/report/@reporte.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center text-muted">No hay reportes disponibles</p>
        }
    </div>
</div>

@code {
    private List<ReporteModel> reportes = new();
    private DashboardStats? stats;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            stats = await ApiService.GetDashboardStats();
            reportes = await ApiService.GetReportes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }
}
