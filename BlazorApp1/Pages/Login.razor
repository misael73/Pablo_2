@page "/login"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@implements IDisposable
@inject IJSRuntime JS
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation
@layout BlazorApp1.Layout.MinimalLayout

<PageTitle>Inicio de Sesión - SIREFI</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h1 class="text-center mb-4">INICIAR SESIÓN</h1>
        <hr />

        <div id="g_id_onload"
             data-client_id="76807928556-odta2gs029semalkn0osp9cbdt7t274k.apps.googleusercontent.com"
             data-context="signin"
             data-ux_mode="popup"
             data-callback="handleCredentialResponse"
             data-auto_prompt="false">
        </div>

        <div class="g_id_signin"
             data-type="standard"
             data-shape="rectangular"
             data-theme="filled_blue"
             data-text="signin_with"
             data-size="large"
             data-logo_alignment="left">
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3" role="alert">
                @errorMessage
            </div>
        }

        @if (isLoading)
        {
            <div class="text-center mt-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Iniciando sesión...</span>
                </div>
                <p class="mt-2">Iniciando sesión...</p>
            </div>
        }

        <hr class="mt-4" />
    </div>
</div>

@code {
    private string? errorMessage;
    private bool isLoading = false;
    private DotNetObjectReference<Login>? objRef;

    protected override void OnInitialized()
    {
        objRef = DotNetObjectReference.Create(this);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Set up the JavaScript callback and pass component reference
                await JS.InvokeVoidAsync("setupGoogleSignIn", objRef);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error setting up Google Sign-In: {ex.Message}");
                errorMessage = "Error al configurar el inicio de sesión con Google. Por favor, recargue la página.";
                StateHasChanged();
            }
        }
    }

    [JSInvokable]
    public async Task HandleGoogleLogin(string idToken)
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            StateHasChanged();

            Console.WriteLine($"Received token: {idToken}");
            
            var result = await AuthStateProvider.Login(idToken);
            
            if (result.Success)
            {
                // Redirect based on role
                if (result.Usuario?.Rol == "administrador" || result.Usuario?.Rol == "tecnico")
                {
                    Navigation.NavigateTo("/dashboard", true);
                }
                else
                {
                    Navigation.NavigateTo("/my-reports", true);
                }
            }
            else
            {
                errorMessage = result.Error ?? "Error al iniciar sesión con Google";
                isLoading = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Login error: {ex.Message}");
            errorMessage = $"Error: {ex.Message}";
            isLoading = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        objRef?.Dispose();
    }
}

