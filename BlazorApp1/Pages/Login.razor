@page "/login"
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IConfiguration Configuration

<PageTitle>Iniciar Sesión - SIREFI</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>SIREFI</h1>
            <p>Sistema de Reporte de Fallas e Incidencias</p>
        </div>
        
        <hr />
        
        <h2>Iniciar Sesión</h2>
        
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        
        @if (isLoading)
        {
            <div class="loading">
                <div class="spinner"></div>
                <p>Iniciando sesión...</p>
            </div>
        }
        else
        {
            <div id="g_id_onload"
                 data-client_id="@googleClientId"
                 data-context="signin"
                 data-ux_mode="popup"
                 data-callback="handleGoogleCredential"
                 data-auto_prompt="false">
            </div>
            
            <div class="g_id_signin"
                 data-type="standard"
                 data-shape="rectangular"
                 data-theme="filled_blue"
                 data-text="signin_with"
                 data-size="large"
                 data-logo_alignment="left">
            </div>
        }
        
        <hr />
        
        <p class="info-text">Ingresa con tu cuenta institucional de Google</p>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }
    
    .login-card {
        background: white;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        text-align: center;
        max-width: 400px;
        width: 100%;
    }
    
    .login-header h1 {
        color: #6c63ff;
        margin-bottom: 5px;
        font-size: 2.5rem;
    }
    
    .login-header p {
        color: #666;
        margin-bottom: 20px;
    }
    
    .login-card h2 {
        color: #333;
        margin: 20px 0;
    }
    
    .g_id_signin {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }
    
    .info-text {
        color: #888;
        font-size: 0.9rem;
        margin-top: 15px;
    }
    
    .loading {
        padding: 20px;
    }
    
    .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #6c63ff;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto 15px;
    }
    
    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 15px;
    }
</style>

@code {
    private bool isLoading = false;
    private string? errorMessage;
    private string googleClientId = "";
    
    protected override void OnInitialized()
    {
        googleClientId = Configuration["GoogleClientId"] ?? "";
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Register the callback function for Google Sign-In
            await JSRuntime.InvokeVoidAsync("registerGoogleCallback", DotNetObjectReference.Create(this));
            
            // Reload Google Sign-In script
            await JSRuntime.InvokeVoidAsync("initGoogleSignIn");
        }
    }
    
    [JSInvokable]
    public async Task HandleGoogleCredential(string credential)
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();
        
        try
        {
            var success = await AuthStateProvider.LoginWithGoogleAsync(credential);
            
            if (success)
            {
                NavigationManager.NavigateTo("/mis-reportes", true);
            }
            else
            {
                errorMessage = "Error al iniciar sesión. Por favor, intenta de nuevo.";
                isLoading = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error de conexión: {ex.Message}";
            isLoading = false;
            StateHasChanged();
        }
    }
}
