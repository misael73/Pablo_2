            </div>
            
            <div class="checkbox-grid">
                <div class="checkbox-label">Infraestructura</div>
                <div class="checkbox-box">@(IsMaintenanceType("Infraestructura") || IsMaintenanceType("El√©ctric") || IsMaintenanceType("Plomer√≠a") ? "X" : "")</div>
                <div class="checkbox-label">Aseo de las √°reas</div>
                <div class="checkbox-box">@(IsMaintenanceType("Aseo") || IsMaintenanceType("Limpieza") ? "X" : "")</div>
            </div>
            
            <div class="checkbox-grid">
                <div class="checkbox-label">Equipo de c√≥mputo y comunicaciones</div>
                <div class="checkbox-box">@(IsMaintenanceType("C√≥mputo") || IsMaintenanceType("TIC") || IsMaintenanceType("Comunicaciones") ? "X" : "")</div>
                <div class="checkbox-label">Otros</div>
                <div class="checkbox-box">@(IsOtherMaintenanceType() ? "X" : "")</div>
            </div>
            
            <!-- √ÅREA SOLICITANTE / FECHA -->
            <div class="field-row">
                <div class="field-label">√ÅREA SOLICITANTE</div>
                <div class="field-value" style="border-right: 1px solid #000;">@(reporte.ReportanteDepartamento ?? reporte.EdificioNombre ?? "")</div>
                <div class="field-label" style="width: 30%;">FECHA DE SOLICITUD DE MANTENIMIENTO</div>
                <div class="field-value" style="width: 15%;">@reporte.FechaReporte.ToString("dd/MM/yyyy")</div>
            </div>
            
            <!-- NOMBRE Y FIRMA DEL SOLICITANTE -->
            <div class="field-row">
                <div class="field-label">NOMBRE Y FIRMA DEL SOLICITANTE</div>
                <div class="field-value">C. @reporte.ReportanteNombre</div>
            </div>
            
            <!-- DESCRIPCI√ìN DEL SERVICIO -->
            <div class="section-header">DESCRIPCI√ìN DEL SERVICIO SOLICITADO O FALLA A REPARAR</div>
            <div class="description-content">
                @reporte.Descripcion
            </div>
            
        </div>
        
        <!-- Footer -->
        <div class="footer">
            Rev. Noviembre 2023
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private ReporteDto? reporte;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var currentUser = await AuthStateProvider.GetCurrentUserAsync();

        if (currentUser == null)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;

        try
        {
            var response = await ApiService.GetReporteAsync(Id);
            if (response?.Success == true && response.Data != null)
            {
                reporte = response.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }

        isLoading = false;
    }

    private bool IsMaintenanceType(string keyword)
    {
        if (reporte?.CategoriaNombre == null) return false;
        var categoria = reporte.CategoriaNombre.ToLower();
        return categoria.Contains(keyword.ToLower());
    }

    private bool IsOtherMaintenanceType()
    {
        if (reporte?.CategoriaNombre == null) return false;
        var categoria = reporte.CategoriaNombre.ToLower();
        
        string[] knownKeywords = { "vehicular", "maquinaria", "laboratorio", "infraestructura", "el√©ctric", "plomer√≠a", "aseo", "limpieza", "c√≥mputo", "computo", "tic", "comunicaciones" };
        return !knownKeywords.Any(k => categoria.Contains(k));
    }
}
