            <div class="header-row">
                <div class="folio-label">FOLIO</div>
                <div class="folio-value">@reporte.Folio</div>
            </div>
            
            <!-- TIPO DE MANTENIMIENTO SOLICITADO -->
            <div class="section-header">TIPO DE MANTENIMIENTO SOLICITADO</div>
            
            <div class="checkbox-grid">
                <div class="checkbox-label">Vehicular</div>
