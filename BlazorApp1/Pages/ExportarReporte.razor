        @@keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* Error State */
        .error-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            color: white;
            text-align: center;
