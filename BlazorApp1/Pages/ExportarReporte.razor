@page "/exportar-reporte/{Id:int}"
@layout EmptyLayout
@attribute [AllowAnonymous]
@inject ApiService ApiService
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<PageTitle>Solicitud de Mantenimiento - @(reporte?.Folio ?? "Cargando...")</PageTitle>

@if (isLoading)
{
    <div class="loading-container no-print" style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <p>Cargando documento...</p>
    </div>
}
else if (reporte == null)
{
    <div class="error-container no-print" style="text-align: center; padding: 40px;">
        <h2>Reporte no encontrado</h2>
        <p>El reporte que buscas no existe o no tienes permiso para verlo.</p>
        <button onclick="window.history.back()" style="padding: 10px 20px; cursor: pointer;">‚Üê Volver</button>
    </div>
}
else
{
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            background: white;
            padding: 20px;
        }
        
        .page-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
        }
        
        /* Buttons container */
        .action-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-bottom: 20px;
            padding: 10px;
            background: #f5f5f5;
            border-radius: 5px;
        }
        
        .action-buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }
        
        .btn-print {
            background: #007bff;
            color: white;
        }
        
        .btn-back {
            background: #6c757d;
            color: white;
        }
        
        /* Table styles */
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        table, th, td {
            border: 1px solid black;
        }
        
        th, td {
            padding: 8px;
            text-align: left;
            vertical-align: top;
        }
        
        /* Folio table */
        .folio-table {
            width: auto;
            margin-left: auto;
            margin-bottom: 15px;
        }
        
        .folio-table td {
            padding: 5px 15px;
        }
        
        .folio-label {
            background: #d9d9d9;
            font-weight: bold;
        }
        
        /* Main form table */
        .main-table {
            margin-bottom: 0;
        }
        
        .section-header {
            background: #d9d9d9;
            font-weight: bold;
            text-align: center;
        }
        
        .checkbox-cell {
            width: 30px;
            text-align: center;
            vertical-align: middle;
        }
        
        .checkbox-label {
            width: 45%;
        }
        
        /* Description section */
        .description-area {
            min-height: 150px;
            padding: 10px;
        }
        
        /* Footer */
        .footer {
            text-align: right;
            font-size: 10pt;
            margin-top: 20px;
            color: #666;
        }
        
        /* Print styles */
        @@media print {
            body {
                padding: 0;
                margin: 0;
            }
            
            .action-buttons,
            .no-print {
                display: none !important;
                visibility: hidden !important;
            }
            
            .page-container {
                max-width: 100%;
                margin: 0;
            }
        }
    </style>
    
    <div class="page-container">
        <!-- Action Buttons (hidden when printing) -->
        <div class="action-buttons no-print">
            <button class="btn-back" @onclick="GoBack">‚Üê Volver</button>
            <button class="btn-print" onclick="window.print()">üñ®Ô∏è Imprimir / Guardar PDF</button>
        </div>
        
        <!-- FOLIO Table -->
        <table class="folio-table">
            <tr>
                <td class="folio-label">FOLIO</td>
            </tr>
            <tr>
                <td style="text-align: center; font-weight: bold;">@reporte.Folio</td>
            </tr>
        </table>
        
        <!-- Main Form Table -->
        <table class="main-table">
            <!-- Tipo de Mantenimiento Header -->
            <tr>
                <td colspan="4" class="section-header">TIPO DE MANTENIMIENTO SOLICITADO</td>
            </tr>
            
            <!-- Checkbox Row 1 -->
            <tr>
                <td class="checkbox-label">Vehicular</td>
                <td class="checkbox-cell">@(IsMaintenanceType("Vehicular") ? "X" : "")</td>
                <td class="checkbox-label">Maquinaria de laboratorio</td>
                <td class="checkbox-cell">@(IsMaintenanceType("Maquinaria") || IsMaintenanceType("Laboratorio") ? "X" : "")</td>
            </tr>
            
            <!-- Checkbox Row 2 -->
            <tr>
                <td class="checkbox-label">Infraestructura</td>
                <td class="checkbox-cell">@(IsMaintenanceType("Infraestructura") || IsMaintenanceType("El√©ctric") || IsMaintenanceType("Plomer√≠a") ? "X" : "")</td>
                <td class="checkbox-label">Aseo de las √°reas</td>
                <td class="checkbox-cell">@(IsMaintenanceType("Aseo") || IsMaintenanceType("Limpieza") ? "X" : "")</td>
            </tr>
            
            <!-- Checkbox Row 3 -->
            <tr>
                <td class="checkbox-label">Equipo de c√≥mputo y comunicaciones</td>
                <td class="checkbox-cell">@(IsMaintenanceType("C√≥mputo") || IsMaintenanceType("Computo") || IsMaintenanceType("TIC") || IsMaintenanceType("Comunicaciones") ? "X" : "")</td>
                <td class="checkbox-label">Otros @(IsOtherMaintenanceType() ? $"({reporte.CategoriaNombre})" : "")</td>
                <td class="checkbox-cell">@(IsOtherMaintenanceType() ? "X" : "")</td>
            </tr>
            
            <!-- Area and Date Row -->
            <tr>
                <td colspan="2" style="background: #d9d9d9; font-weight: bold;">√ÅREA SOLICITANTE</td>
                <td colspan="2" style="background: #d9d9d9; font-weight: bold;">FECHA DE SOLICITUD DE MANTENIMIENTO</td>
            </tr>
            <tr>
                <td colspan="2">@(reporte.ReportanteDepartamento ?? reporte.EdificioNombre ?? "No especificado")</td>
                <td colspan="2">@reporte.FechaReporte.ToString("dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-MX"))</td>
            </tr>
            
            <!-- Name and Signature Row -->
            <tr>
                <td colspan="4" style="background: #d9d9d9; font-weight: bold;">NOMBRE Y FIRMA DEL SOLICITANTE</td>
            </tr>
            <tr>
                <td colspan="4" style="min-height: 50px; padding: 15px;">C. @reporte.ReportanteNombre</td>
            </tr>
            
            <!-- Description Section -->
            <tr>
                <td colspan="4" style="background: #d9d9d9; font-weight: bold;">DESCRIPCI√ìN DEL SERVICIO SOLICITADO O FALLA A REPARAR</td>
            </tr>
            <tr>
                <td colspan="4" class="description-area">@reporte.Descripcion</td>
            </tr>
        </table>
        
        <!-- Footer -->
        <div class="footer">
            Rev. Noviembre 2023
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private ReporteDto? reporte;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var currentUser = await AuthStateProvider.GetCurrentUserAsync();

        if (currentUser == null)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;

        try
        {
            var response = await ApiService.GetReporteAsync(Id);
            if (response?.Success == true && response.Data != null)
            {
                reporte = response.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }

        isLoading = false;
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/mis-reportes");
    }

    private bool IsMaintenanceType(string keyword)
    {
        if (reporte?.CategoriaNombre == null) return false;
        var categoria = reporte.CategoriaNombre.ToLower();
        return categoria.Contains(keyword.ToLower());
    }

    private bool IsOtherMaintenanceType()
    {
        if (reporte?.CategoriaNombre == null) return false;
        var categoria = reporte.CategoriaNombre.ToLower();
        
        string[] knownKeywords = { "vehicular", "maquinaria", "laboratorio", "infraestructura", "el√©ctric", "plomer√≠a", "aseo", "limpieza", "c√≥mputo", "computo", "tic", "comunicaciones" };
        return !knownKeywords.Any(k => categoria.Contains(k));
    }
}
